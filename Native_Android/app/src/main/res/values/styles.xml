<resources>

    <style name="DoDoBattery.BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--    Menu-->
    <style name="MenuTextTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/layout_height_62</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="SeparatorViewTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/layout_height_1</item>
        <item name="android:background">@color/light_purple</item>
    </style>

    <!--    Buttons-->
    <style name="BaseButton">
        <item name="android:layout_width">@dimen/layout_width_215</item>
        <item name="android:layout_height">@dimen/layout_height_50</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="PinkButton" parent="BaseButton">
        <item name="android:background">@drawable/bg_pink_btn</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="OrangeButton" parent="BaseButton">
        <item name="android:background">@drawable/bg_orange_btn</item>
        <item name="android:textColor">@color/dark_gray_2</item>
    </style>

    <!--    Animation-->
    <style name="DialogAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/fragment_fade_in</item>
        <item name="android:windowExitAnimation">@anim/fragment_fade_out</item>
    </style>

</resources>
